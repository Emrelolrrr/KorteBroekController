@{
    ViewData["Title"] = "Korte Broek?";
}

<div class="kortebroek-index">
    <h1>Kan ik vandaag een korte broek aan?</h1>
    <p>Klik hieronder om het weer te bekijken ⬇️</p>
    <a class="btn-check" href="/KorteBroek/Weer">Check het weer</a>
</div>

<style>
    .kortebroek-index {
        text-align: center;
        margin-top: 50px;
    }
    .kortebroek-index h1 {
        font-size: 2.2rem;
        margin-bottom: 20px;
    }
    .btn-check {
        display: inline-block;
        padding: 12px 24px;
        background: #0078D7;
        color: white;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1.2rem;
        transition: background 0.3s ease;
    }
    .btn-check:hover {
        background: #005a9e;
    }
</style>
